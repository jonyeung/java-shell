<?xml version="1.0" encoding="UTF-8"?>

<project default="run">

	<target name="clean">
		<delete dir="bin" />
		<delete file="Assignment2B.jar" />
	</target>

	<target name="init" depends="clean">
		<mkdir dir="bin" />
	</target>

	<target name="compile" depends="init">
		<javac includeantruntime="false" srcdir="src/driver" destdir="bin" />
	</target>

	<target name="jar" depends="compile">
		<jar destfile="Assignment2B.jar" basedir="bin/driver" includes="**/*.class" />
	</target>

	<target name="run" depends="jar">
		<java classname="driver.JShell" fork="true">
			<classpath path="Assignment2B.jar" />
		</java>
	</target>


</project>